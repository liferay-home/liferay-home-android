<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingTop="50dp"
	>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		tools:context="com.liferay.home.liferayhome.activities.HomeActivity"
		tools:showIn="@layout/app_bar_home"
		>

		<TextView
			android:id="@+id/current_temp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:text="@string/current_temp"
			android:textColor="@color/colorAccent"
			android:textSize="25sp"
			android:textStyle="bold"
			/>

		<TextView
			android:id="@+id/device_name_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/current_temp"
			android:layout_centerHorizontal="true"
			android:text="@string/device_name"
			android:textColor="@color/colorPrimary"
			android:textSize="20sp"
			/>

		<com.triggertrap.seekarc.SeekArc
			android:id="@+id/seekArc"
			android:layout_width="270dp"
			android:layout_height="270dp"
			android:layout_below="@+id/device_name_text"
			android:layout_centerHorizontal="true"
			android:padding="30dp"
			app:rotation="180"
			app:startAngle="30"
			app:sweepAngle="300"
			app:touchInside="true"
			/>

		<TextView
			android:id="@+id/temperature1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/device_name_text"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="100dp"
			android:textColor="@color/colorPrimary"
			android:textSize="60sp"
			android:textStyle="bold"
			/>

	</RelativeLayout>


</ScrollView>
