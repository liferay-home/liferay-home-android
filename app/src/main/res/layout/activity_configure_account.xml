<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorPrimary"
	tools:context="com.liferay.home.liferayhome.ConfigureAccount"
	>

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/configure_account"
		android:layout_centerHorizontal="true"
		android:contentDescription="@string/settings_icon"
		android:paddingBottom="20dp"
		android:src="@drawable/ic_menu_manage"
		android:tint="@android:color/white"
		/>

	<TextView
		android:id="@+id/configure_account"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:gravity="center_horizontal"
		android:text="@string/tutorial_description"
		android:textColor="@android:color/white"
		android:textSize="40sp"
		/>

	<Button
		android:id="@+id/button_configure"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:text="@string/configure"
		/>

</RelativeLayout>
